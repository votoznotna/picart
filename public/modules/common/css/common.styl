@import 'mixins'

body, html
/*  -webkit-background-size auto auto
  -moz-background-size auto auto
  -o-background-size auto auto
  background-size auto auto*/

body
  color #14171f
  padding-bottom 20px

.bg-body
  background url("/modules/core/img/brand/bridge.jpg") no-repeat center center fixed
  bacground-size(cover)

.navbar-inverse
  top-bottom-background(#14171f, #222)

.field-validation-error
  color #b94a48

.field-validation-valid
  display none

input.input-validation-error
  border 1px solid #b94a48

input[type="checkbox"].input-validation-error
  border 0 none

.validation-summary-errors
  color #b94a48

.validation-summary-valid
  display none

.text-shadow, label, h1
  font-weight normal
  color #000
  text-shadow: -1px -1px 1px #ababab, 1px 1px 1px #000

.help-block
  font-size 1.2em
  text-shadow 1px 1px 1px #242424
  color #fa2b75

html
  background-repeat no-repeat
  top-bottom-background(#FAD2AF, #E1A696)
  height 100%

.shadow3
  shadow(3px 3px 3px #000000)

.btn
  shadow(3px 3px 3px #000000)
  cursor pointer

.btn-indent
  margin-right 7px

.page-header
  margin-top 30px
  padding-bottom 4px


.whiteOnBlue
  color white
  background-color #296295
  padding 4px
  border-radius 2px

.modal-body
  line-height 20px

.long-name
  word-break break-all

.truncate
    min-width 100%
    min-height 101%

.show-setup
  transition(1s linear all)
  opacity 0

.show-setup.show-start
  opacity 1

