@import '../../common/css/mixins'

font-color = white
link-color = #6ac4ef
background-font-color = #9d9d9d
text-shadow-value =  0px 2px 3px #00000

.show-title
  margin 10px 0 -5px
  z-index -1
  font-weight normal
  text-align center

  div
    color font-color
    /*min-width 100px*/
    border-non-bottom(solid 1px white)
    /*display inline-block*/
    shadow(3px 3px 3px #000000)
    margin 0
    font-weight normal
    font-size 1.2em
    /*word-break break-all*/
    word-wrap break-word
    padding 3px 5px 7px
    border-radius-top 5px
    background-color background-font-color

  a
    color link-color
    display inline-block
    line-height 0.9em
    background-color link-background-color
    text-decoration none
    padding-bottom -2px
    border-bottom 2px solid link-color
    &hover
      color link-color

.show-content
  color font-color
  font-weight normal
  margin -5px 0 0
  z-index -1
  text-align center
  div
    border-non-top(solid 1px white)
    /*word-break break-all*/
    word-wrap break-word
    shadow(3px 3px 3px #000000)
    font-size 1.1em
    padding 11px 5px 2px
    border-radius-bottom(5px)
    background-color background-font-color

.show-img
  background-color #aaa
  cursor pointer
  text-aligh center
  border-radius(5px)
  border-set(solid 1px white)
  shadow(3px 3px 3px #000000)

.text-font
  background-color #565656
  text-shadow -1px -1px 3px #000000
  /*text-shadow 2px 2px 3px #000000*/


.img-responsive
  border-radius 5px

.fileUpload
  position relative
  overflow hidden
  margin 10px

.inputUpload
  padding 2px 5px
  /*width 100%*/
  border-radius 4px
  cursor pointer



.fileUpload input.upload
  position absolute
  top 0
  right 0
  margin 0
  padding 0
  font-size 1.2em
  cursor pointer
  opacity 0

#recaptcha div div
  shadow(3px 3px 3px #000000)

.value-section-vshift
  margin-bottom -10px

.exhibit-buttons .btn
  margin-bottom 8px

.img-box-player
  opacity 0

.img-box-player-alt
  padding-top 50px

.img-box
  transition(1s linear all)
  opacity 0

.img-spin
  width 100%
  height 100%

.img-spin-player
  position absolute
  top 50%
  margin-top -64px

.img-spin-player-alt
  position absolute
  left 50%
  margin-left -64px
  top 50%
  margin-top -64px

.rotator
  position relative

.rotator .previous

  opacity 0

.rotator .current

  opacity 1

#img-play
  position absolute
  top 50%
  left 50%
  margin-left -240px
  margin-top -135px
  z-index 10
  opacity 1.0


.active-player-button
  z-index 1
  cursor pointer
  opacity 1.0

#playerBar
  color white
  span#text
    margin-left 10px

.oddBrowserMarginTop
  margin-top 100px




